type Post {
  postId: ID!
  title: String!
  content: String!
  authorId: ID!
  createdAt: String!
  updatedAt: String
}

input CreatePostInput {
  title: String!
  content: String!
  authorId: ID!
}

extend type Mutation {
  createPost(input: CreatePostInput!): Post!
}

extend type Query {
  getPost(postId: ID!): Post!
  listPosts: [Post!]!
}
type Post {
  id: ID!
  title: String!
  content: String!
  authorId: ID!
  createdAt: String!
  updatedAt: String
}

input CreatePostInput {
  title: String!
  content: String!
  authorId: ID!
}

extend type Mutation {
  createPost(input: CreatePostInput!): Post!
}

extend type Query {
  getPost(id: ID!): Post!
  listPosts: [Post!]!
}